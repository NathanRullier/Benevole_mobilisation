{
  "name": "ai-test",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "jest -i",
    "test:watch": "jest --watch",
    "dev": "nodemon backend/server.js",
    "start": "node backend/server.js",
    "init:json-storage": "node backend/scripts/initStorage.js",
    "test:ui": "npm --prefix frontend test",
    "test:ui:ui": "npm --prefix frontend run test:ui",
    "test:ui:report": "npm --prefix frontend run test:report"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["<rootDir>/frontend/"],
    "testMatch": ["**/tests/**/*.test.js", "**/tests/**/?(*.)+(spec|test).js"],
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/node_modules/**"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "jest": "^30.0.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "fs-extra": "^11.3.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0"
  }
}
